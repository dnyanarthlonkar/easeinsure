<!-- /. NAV SIDE  -->
<div id="page-wrapper" >
<div id="page-inner">
<div class="row">

<div class="col-lg-6 col-md-12">
    <table width="100%" border="0" cellspacing="0" cellpadding="0">
      <tr>
        <td>
          <%= link_to "New Insurance Company", new_admin_insurance_company_path, class: "btn btn-primary" %>
        </td>
      </tr>
    </table>
    <br>
    <table class="table table-striped table-bordered table-hover">
        <thead>
            <tr>
                <th>Company Name</th>
                <th>Licence No</th>
                <th>Company code</th>
                <th>Company Address</th>
                <th>Contact Number</th>
                <th>Registration Code</th>
                <th>Person Name</th>
                <th>Person Contact Number</th>
                <th>Person Contact Email</th>
                <th>Designation</th>
                <th>Status</th>
                <th>Logo</th>
                <th>Actions</th>
            </tr>
        </thead>
       <% @insurance_companies.each do |insurance_company,index |  %>
        <tbody>
          <tr>
            <td><%= link_to insurance_company.try(:company_name), admin_insurance_company_path(insurance_company) %></td>
            <td><%= insurance_company.try(:licence_no) %></td>
            <td><%= insurance_company.try(:company_code) %></td>
            <td><%= insurance_company.try(:company_address) %></td>
            <td><%= insurance_company.try(:contact_number) %></td>
            <td><%= insurance_company.try(:registration_code) %></td>
            <td><%= insurance_company.try(:authorised_person_name) %></td>
            <td><%= insurance_company.try(:authorised_person_contact_number) %></td>
            <td><%= insurance_company.try(:authorised_person_contact_email) %></td>
            <td><%= insurance_company.try(:designation) %></td>
            <td><%= insurance_company.try(:status) %></td>
            <td><%= image_tag(insurance_company.logo_url(:thumb).to_s) %></td>
            <td><%= link_to "Edit", edit_admin_insurance_company_path(insurance_company) , :class => "btn"%>
              | <%= link_to "Delete", admin_insurance_company_path(insurance_company), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        </tbody>
    <% end %> 
    </table>

</div>
</div>
</div>
</div>